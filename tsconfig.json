{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],                    // Add this line
      "@/assets/*": ["src/assets/*"],
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/icons/*": ["src/icons/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/data/*": ["src/data/*"]
    },
    "strictNullChecks": true
  }
}